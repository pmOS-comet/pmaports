# Reference: <https://postmarketos.org/devicepkg>
# Co-Maintainer: Victor Pavlov (vipaoL) <vipaolmail@gmail.com>
maintainer="Barnabas Czeman <barnabas.czeman@postmarketos.org>"
pkgname=device-qcom-msm8953
pkgdesc="Generic device package for various Qualcomm MSM8953/SDM450/SDM632-based devices"
pkgver=10
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	firmware-qcom-adreno-a530
	firmware-qcom-msm8953
	linux-postmarketos-qcom-msm8953
	lk2nd-msm8953
	mkbootimg
	msm-firmware-loader
	postmarketos-base
	qbootctl
	soc-qcom-msm8953
	soc-qcom-msm8953-modem
"
makedepends="devicepkg-dev"
subpackages="
	$pkgname-udev
	device-xiaomi-daisy-fake-goodix:xiaomi_daisy_fake_goodix
"
source="
	deviceinfo
	modules-initfs
	90-device-xiaomi-daisy.rules
	61-gmobile-wakeup-lenovo-cd18781y.hwdb
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -Dm644 61-gmobile-wakeup-lenovo-cd18781y.hwdb \
		-t "$pkgdir/usr/lib/udev/hwdb.d/"
	install -Dm644 "$srcdir"/90-device-xiaomi-daisy.rules \
		-t "$pkgdir/usr/lib/udev/rules.d/"
}

udev() {
	pkgdesc="$pkgdesc (udev rules)"
	install_if="$pkgname=$pkgver-r$pkgrel udev"

	# default_udev isn't used here to allow also installing a udev rule in the
	# xiaomi_daisy_fake_goodix function
	amove usr/lib/udev/hwdb.d/61-gmobile-wakeup-lenovo-cd18781y.hwdb
}

xiaomi_daisy_fake_goodix() {
	pkgdesc="Calibration data for replacement goodix touch controllers"

	amove usr/lib/udev/rules.d/90-device-xiaomi-daisy.rules
}

