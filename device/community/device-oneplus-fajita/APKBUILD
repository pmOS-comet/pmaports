# Reference: <https://postmarketos.org/devicepkg>
maintainer="Casey Connolly <kcxt@postmarketos.org>"
pkgname=device-oneplus-fajita
pkgdesc="OnePlus 6T"
pkgver=20
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	alsa-ucm-conf-sdm845
	firmware-oneplus-sdm845>=9
	hexagonrpcd>=0.3.2-r3
	linux-postmarketos-qcom-sdm845
	mkbootimg
	postmarketos-base
	soc-qcom
	soc-qcom-modem
	soc-qcom-pd-mapper
	soc-qcom-qbootctl
	unl0kr-fbforcerefresh
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	hexagonrpcd.confd
	modules-initfs
	q6voiced.conf
	80-device-oneplus-fajita.preset
	81-libssc-oneplus-fajita.rules
"
install="
	$pkgname-openrc.post-install
	$pkgname-openrc.post-upgrade
	"
subpackages="
	$pkgname-openrc
	$pkgname-pmtest
	$pkgname-systemd
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	install -Dm644 "$srcdir"/81-libssc-oneplus-fajita.rules \
		-t "$pkgdir"/usr/lib/udev/rules.d/
	install -Dm644 "$srcdir"/q6voiced.conf "$pkgdir"/etc/conf.d/q6voiced
	install -Dm644 "$srcdir"/hexagonrpcd.confd \
		"$pkgdir"/usr/share/hexagonrpcd/hexagonrpcd-sdsp.conf
	install -Dm644 "$srcdir"/80-device-oneplus-fajita.preset \
		-t "$pkgdir"/usr/lib/systemd/system-preset
}

openrc() {
	default_openrc
	depends="hexagonrpcd-openrc openrc"
}

pmtest() {
	depends="bootrr qrtr postmarketos-test-unl0kr"
	install_if="$pkgname=$pkgver-r$pkgrel postmarketos-mkinitfs-hook-ci"

	mkdir -p "$subpkgdir"
}

