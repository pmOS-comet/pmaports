deviceinfo_format_version="0"
deviceinfo_name="Samsung Galaxy A50"
deviceinfo_manufacturer="Samsung"
deviceinfo_codename="samsung-a50"
deviceinfo_year="2019"
deviceinfo_arch="aarch64"

# Device related
deviceinfo_chassis="handset"
deviceinfo_external_storage="true"

# Bootloader related
deviceinfo_flash_method="heimdall-bootimg"
deviceinfo_generate_bootimg="true"
deviceinfo_flash_pagesize="2048"
deviceinfo_header_version="1"
deviceinfo_flash_offset_kernel="0x00008000"
deviceinfo_flash_offset_ramdisk="0xf0000000"
deviceinfo_flash_offset_second="0xf0000000"
deviceinfo_flash_offset_tags="0x00000100"
deviceinfo_flash_heimdall_partition_kernel="BOOT"
deviceinfo_flash_heimdall_partition_rootfs="USERDATA"

deviceinfo_rootfs_image_sector_size="4096"
deviceinfo_flash_sparse="true"

# BOOT partition can store up to ~55MB, attempting
# more modifications (such as kernel features or systemd)
# may cause flashing to fail
deviceinfo_create_initfs_extra="true"
