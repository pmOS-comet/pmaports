# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-lenovo-karate
pkgdesc="Lenovo K6 Power"
pkgver=2
pkgrel=1
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base linux-lenovo-karate mkbootimg mdss-fb-init-hack"
makedepends="devicepkg-dev"
source="deviceinfo 90-android-touch-dev.rules"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-udev
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -Dm644 "$srcdir"/90-android-touch-dev.rules \
		"$pkgdir"/usr/lib/udev/rules.d/90-android-touch-dev.rules
}

nonfree_firmware() {
	depends="firmware-lenovo-karate"
	pkgdesc="Wifi firmware"
	mkdir "$subpkgdir"
}

