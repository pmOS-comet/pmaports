# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-lg-dory
pkgver=2
pkgrel=1
pkgdesc="LG G Watch"
url="https://postmarketos.org"
arch="armhf"
license="MIT"
depends="
	linux-lg-dory
	mkbootimg
	msm-fb-refresher
	postmarketos-base
	"
makedepends="devicepkg-dev"
subpackages="
	$pkgname-asteroid
	$pkgname-udev
"
source="
	90-touchscreen-dev.rules
	deviceinfo
	machine.conf
	"
options="!check !archcheck"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -Dm644 -t "$pkgdir"/usr/lib/udev/rules.d \
		"$srcdir"/90-touchscreen-dev.rules
}

asteroid() {
	install_if="$pkgname=$pkgver-r$pkgrel asteroid-launcher"
	install -Dm644 -t "$subpkgdir"/etc/asteroid \
		"$srcdir"/machine.conf
}

