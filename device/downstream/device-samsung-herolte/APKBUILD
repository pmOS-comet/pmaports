# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-herolte
pkgdesc="Samsung Galaxy S7"
pkgver=4
pkgrel=1
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	postmarketos-base
	postmarketos-base-downstream
	linux-samsung-herolte
	mkbootimg
	msm-fb-refresher
"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf initfs-hook.sh"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Non-free firmware for the Samsung Galaxy S7"
	depends="firmware-samsung-hero"
	mkdir "$subpkgdir"
}

