# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-star2lte
pkgdesc="Samsung Galaxy S9+"
pkgver=3
pkgrel=1
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-samsung-star2lte
	mkbootimg
	postmarketos-base
	postmarketos-base-downstream
	msm-fb-refresher
"
makedepends="devicepkg-dev"
source="
	deviceinfo
	initfs-hook.sh
	hciattach
	10-hciattach.rules
"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-nonfree-firmware-openrc:nonfree_firmware_openrc
	$pkgname-nonfree-firmware-udev:nonfree_firmware_udev
	$pkgname-x11
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	# hciattach service for Bluetooth
	install -Dm755 "$srcdir"/hciattach \
		-t "$pkgdir"/etc/init.d
	install -Dm644 "$srcdir"/10-hciattach.rules \
		-t "$pkgdir"/usr/lib/udev/rules.d
}

nonfree_firmware() {
	pkgdesc="$pkgdesc (WiFi and BT firmware)"
	depends="firmware-samsung-crownlte bluez-deprecated"

	mkdir -p "$subpkgdir"
}

nonfree_firmware_openrc() {
	default_openrc
	install_if="$pkgname-nonfree-firmware=$pkgver-r$pkgrel openrc"
}

nonfree_firmware_udev() {
	default_udev
	install_if="$pkgname-nonfree-firmware=$pkgver-r$pkgrel udev"
}

x11() {
	install_if="$pkgname=$pkgver-r$pkgrel xorg-server"
	depends="xf86-input-evdev"
	mkdir "$subpkgdir"
}

