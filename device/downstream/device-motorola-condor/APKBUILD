# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-motorola-condor
pkgdesc="Motorola Moto E (1st gen)"
pkgver=4
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="postmarketos-base linux-motorola-condor mkbootimg msm-fb-refresher"
makedepends="devicepkg-dev"
subpackages="$pkgname-udev"
source="deviceinfo kernel-cmdline.conf initfs-hook.sh 90-android-touch-dev.rules"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -D -m644 "$srcdir"/90-android-touch-dev.rules \
			"$pkgdir"/usr/lib/udev/rules.d/90-android-touch-dev.rules

}

