# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-vernee-k506
pkgdesc="Vernee Thor"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base linux-vernee-k506 mkbootimg"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf initfs-hook.sh"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="SoC firmware (WiFi, BT, GPS, Modem, FM)"
	depends="firmware-vernee-k506"
	mkdir "$subpkgdir"
}

