# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-beyond2lte
pkgdesc="Samsung Galaxy S10+"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	linux-samsung-beyond2lte
	mkbootimg
	msm-fb-refresher
	postmarketos-base
"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf initfs-hook.sh"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Firmware for the Samsung Galaxy S10+"
	depends="firmware-samsung-beyond2lte"
	mkdir "$subpkgdir"
}

