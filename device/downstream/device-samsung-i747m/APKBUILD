# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-i747m
pkgdesc="Samsung Galaxy SIII (USA/Canada)"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="armhf"
options="!check !archcheck"
depends="postmarketos-base linux-samsung-i747m mkbootimg"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf 90-android-touch-dev.rules fb.modes"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-udev
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -Dm644 "$srcdir"/90-android-touch-dev.rules \
		"$pkgdir"/usr/lib/udev/rules.d/90-android-touch-dev.rules
	install -Dm644 "$srcdir"/fb.modes \
		"$pkgdir"/etc/fb.modes
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-i747m"
	mkdir "$subpkgdir"
}

