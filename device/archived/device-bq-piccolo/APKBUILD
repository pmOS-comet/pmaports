# Archived: unmaintained port, only for testing. Use generic/mainline port (qcom-msm8916)
# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-bq-piccolo
pkgdesc="BQ Aquaris M5"
pkgver=10
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base mkbootimg linux-postmarketos-qcom-msm8916
	 soc-qcom-msm8939 soc-qcom-msm8916-rproc"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf modules-initfs"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="GPU/WiFi/BT/Video(/Modem) firmware"
	depends="firmware-qcom-adreno-a420 msm-firmware-loader
		 firmware-bq-piccolo-venus firmware-bq-piccolo-wcnss-nv"
	mkdir "$subpkgdir"
}

