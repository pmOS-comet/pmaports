# Archived: Kernel does not build anymore
# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-hero2lte
pkgdesc="Samsung Galaxy S7 edge"
pkgver=4
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	postmarketos-base
	linux-samsung-hero2lte
	mkbootimg
	msm-fb-refresher
"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf initfs-hook.sh"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Non-free firmware for Wi-Fi on the Samsung Galaxy S7 (edge)"
	depends="firmware-samsung-hero"
	mkdir "$subpkgdir"
}

