# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=linux-postmarketos-asahi
pkgver=6.17.7_p1
pkgrel=0
_rel=${pkgver#*_p}
_kver=${pkgver%_p*}
_kver=${_kver//_/-}
_asahiver=$_kver-$_rel
pkgdesc="Kernel for Apple M-series devices"
arch="aarch64"
_carch="arm64"
_flavor="postmarketos-asahi"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip
	!check
	!tracedeps
	pmb:cross-native
	pmb:kconfigcheck-community
	pmb:kconfigcheck-uefi
	pmb:kconfigcheck-virt
"
makedepends="
	bash
	bc
	bison
	clang20-libclang
	devicepkg-dev
	diffutils
	elfutils-dev
	findutils
	flex
	git
	linux-headers
	openssl-dev
	pahole
	perl
	python3
	rust
	rust-bindgen
	rust-src
	rustfmt
	sed
	zstd
"

# Source
_repository="linux"
source="
	$pkgname-$_asahiver.tar.gz::https://github.com/AsahiLinux/linux/archive/refs/tags/asahi-$_asahiver.tar.gz
	asahi.config.patch
	misc.config
	pmos.config
"
builddir="$srcdir/linux-asahi-$_asahiver"
# Use the default arm defconfig
_defconfig="defconfig"

prepare() {
	default_prepare
	mkdir -p "$builddir"/arch/"$_carch"/configs
	local _config
	for _config in "$srcdir"/*.config; do
		cp "$_config" "$builddir"/arch/"$_carch"/configs/
	done

	# Generate .config
	unset LDFLAGS
	make ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-$_flavor" \
		"$_defconfig" asahi.config misc.config pmos.config
}

build() {
	unset LDFLAGS
	make ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-$_flavor"
}

package() {
	install -Dm644 "$builddir/arch/$_carch/boot/vmlinuz.efi" \
			"$pkgdir/boot/linux.efi"

	make modules_install dtbs_install \
		ARCH="$_carch" \
		INSTALL_PATH="$pkgdir"/boot/ \
		INSTALL_MOD_PATH="$pkgdir" \
		INSTALL_MOD_STRIP=1 \
		INSTALL_DTBS_PATH="$pkgdir"/boot/dtbs-asahi

	rm -f "$pkgdir"/lib/modules/*/build "$pkgdir"/lib/modules/*/source

	install -D "$builddir"/include/config/kernel.release \
		"$pkgdir"/usr/share/kernel/$_flavor/kernel.release
}

