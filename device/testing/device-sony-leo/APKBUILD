# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Luca Weiss <luca@lucaweiss.eu>
pkgname=device-sony-leo
pkgdesc="Sony Xperia Z3"
pkgver=5
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="
	firmware-sony-leo-adsp
	firmware-sony-leo-modem
	firmware-sony-leo-wifi
	linux-postmarketos-qcom-msm8974
	lk2nd-msm8974
	mkbootimg
	msm-modem
	postmarketos-base
	soc-qcom-msm8974
	ta-service
"
makedepends="devicepkg-dev"
subpackages="
	$pkgname-openrc:openrc
	"
source="deviceinfo"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

openrc() {
	install_if="$pkgname=$pkgver-r$pkgrel openrc"
	install="$subpkgname.post-install $subpkgname.post-upgrade"
	depends="
		openrc
		ta-service-openrc
		"

	mkdir -p "$subpkgdir"
}

sha512sums="
5c7fe341446fc9f3106f27764b1e4587fe2975c7b1e5d49093072bfaa224848d0bd18854ea1ac8d0714d4f6a25f4b3b063f7683ec8dcb2f432ec106eb8d666d3  deviceinfo
"
