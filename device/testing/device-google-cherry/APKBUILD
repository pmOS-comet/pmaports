maintainer="Ingo Reitz <9l@9lo.re>"
pkgname=device-google-cherry
pkgdesc="Google Cherry Chromebooks"
pkgver=8
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	alsa-ucm-conf
	depthcharge-tools
	linux-postmarketos-mediatek-mt81
	postmarketos-base
	postmarketos-cros-common
	soc-mediatek-mt8183
"
makedepends="devicepkg-dev"
source="deviceinfo kernel-cmdline.conf modules-initfs"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="WiFi/BT Firmware"
	depends="linux-firmware-mediatek"
	mkdir "$subpkgdir"
}

