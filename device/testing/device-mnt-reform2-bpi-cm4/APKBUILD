# Reference: <https://postmarketos.org/devicepkg>
maintainer=""
pkgname=device-mnt-reform2-bpi-cm4
pkgdesc="MNT Research Reform 2 with BPI-CM4"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base u-boot-amlogic-bananapi-bpi-cm4-cm4io soc-amlogic-s905 linux-postmarketos-amlogic"
makedepends="devicepkg-dev"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
source="deviceinfo kernel-cmdline.conf modules-initfs"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="vdec firmware"
	depends="linux-firmware-meson linux-firmware-rtw88"
	mkdir "$subpkgdir"
}

