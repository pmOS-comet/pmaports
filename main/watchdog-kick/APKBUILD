maintainer=""
pkgname=watchdog-kick
pkgver=1
pkgrel=0
pkgdesc="Periodically kick watchdogs"
url="https://postmarketos.org"
arch="noarch"
license="GPL-2.0-or-later"
install="$pkgname-openrc.post-install"
subpackages="$pkgname-openrc $pkgname-systemd"
source="
	watchdog-kick
	watchdog-kick.init
	watchdog-kick.service
"
options="!check"

package() {
	install -Dm755 "$srcdir/watchdog-kick" \
		"$pkgdir/usr/sbin/watchdog-kick"
	install -Dm755 "$srcdir/watchdog-kick.init" \
		"$pkgdir/etc/init.d/watchdog-kick"
	install -Dm644 "$srcdir/watchdog-kick.service" \
		-t "$pkgdir/usr/lib/systemd/system"
}

